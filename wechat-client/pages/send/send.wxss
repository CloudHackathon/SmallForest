.input {
    width: 100%;
    padding: 20rpx;
    font-size: 28rpx;
}

.tabItem {
    display: inline-block;
    margin-right: 20rpx;
    color: #00bfbe;
    padding: 10rpx 30rpx;
    font-size: 28rpx;
    border-radius: 25rpx;
    border: 1px solid #00bfbe;
}

.send {
    width: 100%;
    text-align: center;
    height: 83rpx;
    line-height: 83rpx;
    margin-top: 20rpx;
    border: 1px solid #00bfbe;
    background-color: #00bfbe;
    overflow: hidden;
}

.sendMain {
    width: 100%;
    position: absolute;
    bottom: 0;
}

.finish {
    display: block;
    text-align: center;
    font-size: 32rpx;
    color: #fff;
}
