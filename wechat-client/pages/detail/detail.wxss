.detail {
    font-size: 28rpx;
    line-height: 1.4;
    margin-top: 20rpx;
    padding: 20rpx;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
}

.tip {
    display: inline-block;
    float: left;
}

.tipIconfont {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 5px;
    border-radius: 50%;
    background-color: red;
    vertical-align: middle;
}

.time {
    float: right;
}

.tipText {
    vertical-align: middle;
}

.content {
    margin-top: 20rpx;
}

.btn {
    margin: 20rpx;
}
