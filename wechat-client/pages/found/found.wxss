page {
    font-size: 28rpx;
}

.foundLabel {
    background-color: #00bdbc;
    padding-bottom: 20rpx;
}

.list {
    padding: 10px;
    padding-bottom: 0;
    margin-top: 20rpx;
    border-top: 1px solid #ccc;
    border-bottom: 1px solid #ccc;
    font-size: 28rpx;
    background-color: #fff;
}

.tip {
    display: inline-block;
    float: left;
}

.foundLabel {
    color: #fff;
}

.listItem {
    display: inline-block;
    padding: 10rpx 30rpx;
    margin-right: 20rpx;
    border: 1px solid #fff;
    border-radius: 8rpx;
}

.foundLabel .listItem.current {
    background-color: #fff;
    color: #00bdbc;
}

.title {
    display: inline-block;
    padding: 20rpx 0;
}

.tipIconfont {
    display: inline-block;
    width: 20px;
    height: 20px;
    margin-right: 5px;
    border-radius: 50%;
    background-color: red;
    vertical-align: middle;
}

.time {
    float: right;
    color: #a3a3a3;
}

.tipText {
    color: #f05462;
    vertical-align: middle;
}

.listContent {
    padding-bottom: 10px;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.avatar {
    display: inline-block;
    width: 100rpx;
    height: 100rpx;
    margin-right: 20rpx;
    background-color: #eeeeee;
    border-radius: 50%;
    vertical-align: middle;
}

.chatInfo {
    color: #787878;
    padding-bottom: 10rpx;
}

.tipStyle {
    display: inline-block;
    margin-top: -10rpx;
    vertical-align: middle;
}

.styleItem {
    color: #b9b9ba;
    font-size: 28rpx;
    margin-right: 30rpx;
    padding: 5rpx 10rpx;
    border-radius: 5rpx;
    border: 1px solid #b9b9ba;
    font-size: 24rpx;
}

.wechat {
    float: right;
    width: 65rpx;
    height: 65rpx;
    margin-top: 16rpx;
}

.watchList {
    position: relative;
    padding-bottom: 10px;
    padding-top: 10px;
    border-bottom: 1px solid #ccc;
}

.watchList:last-child {
    border-bottom: 0;
}

.join {
    margin-bottom: 20rpx;
    padding-top: 0;
}

.goForest {
    margin-top: 30rpx;
    padding: 30rpx 0;
    color: #00bebe;
    font-size: 32rpx;
    text-align: center;
    background-color: #fff;
}

.chatInfo {
    display: inline-block;
    width: 446rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.etc {
    color: #b9b9ba;
}

.disc {
    position: absolute;
    right: 0;
    top: 31rpx;
    width: 20rpx;
    height: 20rpx;
    border-radius: 50%;
    background-color: #00bdbc;
}
